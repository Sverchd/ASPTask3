@using ASPTask1.Controllers
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
<p>
    <a name="top"></a>
</p>
<header>@Html.ActionLink(" ", "Index", "Home", new {area = ""}, new {@class = "header-logo"})@Html.ActionLink("Lineage", "Index", "Home", new {area = ""}, new {@class = "header-text"})</header>
<div class="content">
    <div class="container">
        @RenderBody()
        <hr/>
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application </p>
            <p>
                <a id="to-top" href="#top">Наверх</a>
            </p>
        </footer>
    </div>
    <div class="navbar">
        <div class="nav-container">
            <div class="navbar-header">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="navbar-nav">@Html.ActionLink("Home", "Index", "Home", new {}, new {@class = "navbar-item"})</li>
                    <li class="navbar-nav">@Html.ActionLink("Guest", "Guest", "Guest", new {}, new {@class = "navbar-item"})</li>
                    <li class="navbar-nav">@Html.ActionLink("Survey", "Survey", "Survey", new {}, new {@class = "navbar-item"})</li>
                </ul>
            </div>
            <div class="survey">
                @Html.Partial("SurveyModule")
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")
@RenderSection("scripts", false)
</body>
</html>